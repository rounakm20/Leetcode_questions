class Solution {
    public boolean isPalindrome(int x) {
        
        String str = String.valueOf(x);
        
        int i = 0;
        int j = str.length() - 1;
        
        while(i < j) { //loop while will go unti i<j rhega 
            if(str.charAt(i) != str.charAt(j)) {
                return false;
            }
            i++; //starts from zero index
            j--; // starts from last index 
        }
        
        return true;
    }
}
